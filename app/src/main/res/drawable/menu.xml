<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80DDD9D9"/> <!-- Sombra negra semi-transparente -->
            <corners android:radius="40dp"/> <!-- Bordes redondeados -->
        </shape>
        <padding
            android:left="6dp"
            android:right="6dp"
            android:top="6dp"
            android:bottom="2dp"/>
    </item>

    <!-- Fondo negro con un leve degradado -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0C0C0C"
                android:endColor="#FF000000"
                android:angle="270"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>
</layer-list>