<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa del fondo -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#232323" /> <!-- Color de fondo -->
            <corners android:radius="4dp" /> <!-- Esquinas redondeadas (opcional) -->
        </shape>
    </item>

    <!-- Capa del borde -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color del borde -->
            <corners android:radius="4dp" /> <!-- Esquinas redondeadas (opcional) -->
        </shape>
    </item>
</layer-list>