<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cambiar_ContrasenaEmpleador">

    <EditText
        android:id="@+id/txtRepetirNuevaContrasenaEmpleador"
        android:layout_width="335dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/textboxregistro"
        android:ems="10"
        android:hint="   Vuelve a ingresar la nueva contraseña"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNuevaContrasenaEmpleador" />

    <ImageView
        android:id="@+id/imgLineas2"
        android:layout_width="630dp"
        android:layout_height="230dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/login_desing" />

    <EditText
        android:id="@+id/txtContrasenaActualEmpleador"
        android:layout_width="335dp"
        android:layout_height="51dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/textboxregistro"
        android:ems="10"
        android:hint="   Contraseña actual"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLineas2" />

    <EditText
        android:id="@+id/txtNuevaContrasenaEmpleador"
        android:layout_width="335dp"
        android:layout_height="51dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/textboxregistro"
        android:ems="10"
        android:hint="   Nueva contraseña"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtContrasenaActualEmpleador" />

    <ImageView
        android:id="@+id/btnUpdateContrasenaEmpleador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRepetirNuevaContrasenaEmpleador"
        app:layout_constraintVertical_bias="0.155"
        app:srcCompat="@drawable/editar_contrasena" />

    <ImageButton
        android:id="@+id/btnSalir"
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="267dp"
        android:layout_height="310dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/contrasena" />


</androidx.constraintlayout.widget.ConstraintLayout>