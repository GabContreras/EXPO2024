        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnSalir9"
            android:layout_width="35dp"
            android:layout_height="34dp"
            android:background="@drawable/baseline_arrow_back_ios_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.095" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="436dp"
        android:background="@drawable/elementorol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/btnCuentaEmpleador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="116dp"
            android:background="@drawable/botonrolempleador"
            android:src="@drawable/botonrolempleador"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/botonrolempleador" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elige el tipo de cuenta que mÃ¡s se adapte para ti!"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.913" />

        <ImageButton
            android:id="@+id/btnCuentaSolicitante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:background="@drawable/botonsms"
            app:layout_constraintBottom_toTopOf="@+id/btnCuentaEmpleador"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/botonrolsolicitante" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="312dp"
            android:layout_height="54dp"
            android:layout_marginStart="6dp"
            android:text="Descubre oportunidades laborales y solicita puestos que se ajusten a tus habilidades y preferencias."
            app:layout_constraintBottom_toBottomOf="@+id/btnCuentaSolicitante"
            app:layout_constraintEnd_toEndOf="@+id/btnCuentaSolicitante"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/btnCuentaSolicitante"
            app:layout_constraintTop_toTopOf="@+id/btnCuentaSolicitante"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="302dp"
            android:layout_height="43dp"
            android:text="Publica y gestiona ofertas de trabajo y encuentra talento cualificado para tu empresa"
            app:layout_constraintBottom_toBottomOf="@+id/btnCuentaEmpleador"
            app:layout_constraintEnd_toEndOf="@+id/btnCuentaEmpleador"
            app:layout_constraintStart_toStartOf="@+id/btnCuentaEmpleador"
            app:layout_constraintTop_toTopOf="@+id/btnCuentaEmpleador"
